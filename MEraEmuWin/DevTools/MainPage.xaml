            -->
        </muxc:TabView>

        <Rectangle x:Name="PageFlyoutContainerBackground" Grid.RowSpan="2" IsTapEnabled="True" PointerPressed="PageFlyoutContainerBackground_PointerPressed" />
        <Grid x:Name="PageFlyoutContainer" Grid.RowSpan="2" TabFocusNavigation="Cycle" VerticalAlignment="Top"
              KeyDown="PageFlyoutContainer_KeyDown" />
    </Grid>
</Page>
